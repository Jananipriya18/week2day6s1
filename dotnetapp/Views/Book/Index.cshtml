@model List<dotnetapp.Models.Book>

    <h2>Books</h2>

    <form asp-action="Index" method="get">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Search by Title">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Quantity</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books found</p>
}

    <div>Total number of books: @ViewBag.TotalCount</div>
